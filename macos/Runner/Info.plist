<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Configurazioni di base dell'applicazione -->
    <key>CFBundleDevelopmentRegion</key>
    <string>$(DEVELOPMENT_LANGUAGE)</string>
    <key>CFBundleExecutable</key>
    <string>$(EXECUTABLE_NAME)</string>
    <key>CFBundleIconFile</key>
    <string></string>
    <key>CFBundleIdentifier</key>
    <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
    <key>CFBundleInfoDictionaryVersion</key>
    <string>6.0</string>
    <key>CFBundleName</key>
    <string>OpenDSA: Reading</string>
    <key>CFBundleDisplayName</key>
    <string>OpenDSA: Reading</string>
    <key>CFBundlePackageType</key>
    <string>APPL</string>
    <key>CFBundleShortVersionString</key>
    <string>$(FLUTTER_BUILD_NAME)</string>
    <key>CFBundleVersion</key>
    <string>$(FLUTTER_BUILD_NUMBER)</string>

    <!-- Requisiti di sistema -->
    <key>LSMinimumSystemVersion</key>
    <string>$(MACOSX_DEPLOYMENT_TARGET)</string>
    <key>NSHumanReadableCopyright</key>
    <string>$(PRODUCT_COPYRIGHT)</string>
    <key>NSMainNibFile</key>
    <string>MainMenu</string>
    <key>NSPrincipalClass</key>
    <string>NSApplication</string>

    <!-- Permessi e descrizioni per l'utente -->
    <key>NSMicrophoneUsageDescription</key>
    <string>OpenDSA: Reading necessita dell'accesso al microfono per analizzare la pronuncia durante gli esercizi di lettura. Questo permette di fornire feedback accurati e personalizzati per migliorare le tue capacità di lettura.</string>

    <key>NSAppleMusicUsageDescription</key>
    <string>OpenDSA: Reading richiede l'accesso alle funzionalità audio per elaborare correttamente la tua voce durante gli esercizi di lettura.</string>

    <!-- Configurazioni audio -->
    <key>NSSoundUsageDescription</key>
    <string>OpenDSA: Reading utilizza le funzionalità audio per il riconoscimento vocale e il feedback durante gli esercizi.</string>

    <!-- Configurazioni di sistema -->
    <key>LSApplicationCategoryType</key>
    <string>public.app-category.education</string>

    <!-- Configurazioni sandbox e sicurezza -->
    <key>com.apple.security.app-sandbox</key>
    <true/>

    <!-- Permessi di rete per VOSK -->
    <key>com.apple.security.network.client</key>
    <true/>
    <key>com.apple.security.network.server</key>
    <true/>

    <!-- Permessi per i file e il modello VOSK -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    <key>com.apple.security.files.downloads.read-write</key>
    <true/>
    <key>com.apple.security.files.user-selected.read-only</key>
    <true/>
    <key>com.apple.security.assets.downloads.read-write</key>
    <true/>

    <!-- Percorsi specifici per VOSK -->
    <key>com.apple.security.temporary-exception.files.home-relative-path.read-write</key>
    <array>
        <string>/Library/Application Support/OpenDSA/</string>
        <string>/.local/share/OpenDSA/</string>
    </array>

    <!-- Permessi audio -->
    <key>com.apple.security.device.microphone</key>
    <true/>
    <key>com.apple.security.device.audio-input</key>
    <true/>

    <!-- Configurazioni memoria per VOSK -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>

    <!-- Configurazioni per il supporto di più architetture -->
    <key>LSArchitecturePriority</key>
    <array>
        <string>arm64</string>
        <string>x86_64</string>
    </array>

    <!-- Configurazioni per la gestione energia -->
    <key>NSSupportsAutomaticGraphicsSwitching</key>
    <true/>

    <!-- Configurazioni per le notifiche -->
    <key>NSUserNotificationAlertStyle</key>
    <string>alert</string>
</dict>
</plist>